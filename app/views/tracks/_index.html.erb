<%- model_class = Track -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:year) %></th>
      <th><%= model_class.human_attribute_name(:genre) %></th>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= link_to track.id, track_path(track) %></td>
        <td><%= track.title %></td>
        <td><%= track.year %></td>
        <td><%= track.genre %></td>
        <td><%= track.number %></td>
        <td><%=l track.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      track_path(track), :class => 'btn btn-success btn-xs' %>
        </td>
      </tr>
    <% end %>
    <% if @tracks_message %> 
      <tr><td colspan=42 class='text-center'><%= @tracks_message %></td></tr>
    <% end %>
  </tbody>
</table>
